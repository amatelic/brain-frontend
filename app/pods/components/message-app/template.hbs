<div class="user__list">
  <h3>Messages({{isNew}}) :</h3>
  <hr/>
  {{#each messages as |message|}}
  <div {{action 'showMessage' message}} class="user__message bb-1">
    <img class="circle" src="assets/images/{{message.image}}" alt="" />
    <div >
      <p class="user__message__title">{{message.title}}</p>
      <small class="user__message__author"> - {{message.author}} </small>
      {{#if message.status}}
        <span class="message--new">NEW</span>
      {{/if}}
    </div>
  </div>
  {{/each}}
</div>

<div class="user__messages">
  <div class="user__display">
    {{#if text}}
      {{#emoji-tag class="message__text"}}
        {{text}}
      {{/emoji-tag}}
    {{/if}}
  </div>
</div>
{{yield}}
