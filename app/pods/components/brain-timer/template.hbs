<div class="brain__right">
  <div class="brain__container">
    <p>Select task to work on:</p>
    <select class="brain__dropdown" onchange={{action "selectTask" value="target.value"}}>
      {{#each tasks as |task index|}}
        <option value={{index}} selected={{eq task.name 'test'}}>{{task.name}}</option>
      {{/each}}
    </select>
    <p>Select time to complite:</p>
    {{input type="input" class="brain__input" value=setTime}}
    <!-- <input class="brain__input" type="time" name="name" value={{setTime}}> -->
    <button type="submit" class="btn btn-sm btn-default" {{action "start"}}>Start task:</button>
  </div>
</div>


{{yield}}
